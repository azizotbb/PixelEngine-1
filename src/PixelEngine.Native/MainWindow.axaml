<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="PixelEngine.Native.MainWindow"
        Title="PixelEngine"
        Background="White">

    <Grid>
        <Grid.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="#FFFFFF" Offset="0"/>
                <GradientStop Color="#F8F9FA" Offset="0.5"/>
                <GradientStop Color="#FFFFFF" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>

        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            
            <!-- Pixel Logo -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,30">
                <Rectangle Width="20" Height="20" Fill="#4A90E2" Margin="2"/>
                <Rectangle Width="20" Height="20" Fill="#7ED321" Margin="2"/>
                <Rectangle Width="20" Height="20" Fill="#F5A623" Margin="2"/>
                <Rectangle Width="20" Height="20" Fill="#D0021B" Margin="2"/>
                <Rectangle Width="20" Height="20" Fill="#BD10E0" Margin="2"/>
                <Rectangle Width="20" Height="20" Fill="#50E3C2" Margin="2"/>
                <Rectangle Width="20" Height="20" Fill="#B8E986" Margin="2"/>
                <Rectangle Width="20" Height="20" Fill="#F8E71C" Margin="2"/>
            </StackPanel>

            <!-- Title -->
            <TextBlock Text="PixelEngine" 
                       FontSize="48" 
                       FontWeight="Light"
                       Foreground="#2C3E50"
                       HorizontalAlignment="Center"
                       Margin="0,20,0,10"/>

            <!-- Subtitle -->
            <TextBlock Text="Advanced Graphics Engine - Built with C#"
                       FontSize="18"
                       Foreground="#7F8C8D"
                       HorizontalAlignment="Center"
                       Margin="0,10,0,40"/>

            <!-- Features -->
            <StackPanel Orientation="Vertical" HorizontalAlignment="Center" Margin="0,20,0,40">
                <TextBlock Text="âœ¨ Features:" FontSize="16" FontWeight="Bold" Foreground="#8E44AD" Margin="0,0,0,10"/>
                <TextBlock Text="ðŸŽ¨ Advanced Pixel Management" FontSize="14" Margin="0,2"/>
                <TextBlock Text="ðŸŒˆ Color Space Conversions" FontSize="14" Margin="0,2"/>
                <TextBlock Text="ðŸŽ­ Gradient Generation" FontSize="14" Margin="0,2"/>
                <TextBlock Text="ðŸ”§ Graphics Utilities" FontSize="14" Margin="0,2"/>
                <TextBlock Text="ðŸ’» Cross-Platform Support" FontSize="14" Margin="0,2"/>
            </StackPanel>

            <!-- Buttons -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,0">
                <Button Content="About" 
                        Width="120" 
                        Height="40" 
                        Margin="10,0"
                        Background="#3498DB"
                        Foreground="White"
                        Click="AboutButton_Click"/>
                        
                <Button Content="Exit" 
                        Width="120" 
                        Height="40" 
                        Margin="10,0"
                        Background="#E74C3C"
                        Foreground="White"
                        Click="ExitButton_Click"/>
            </StackPanel>

        </StackPanel>

        <!-- Status Bar -->
        <Border VerticalAlignment="Bottom" 
                Background="#34495E" 
                Height="30">
            <Grid>
                <TextBlock Text="Ready" 
                           Foreground="White" 
                           FontSize="12" 
                           VerticalAlignment="Center"
                           Margin="20,0"/>
                <TextBlock Text="PixelEngine v1.0" 
                           Foreground="#BDC3C7" 
                           FontSize="12" 
                           HorizontalAlignment="Right"
                           VerticalAlignment="Center"
                           Margin="0,0,20,0"/>
            </Grid>
        </Border>

    </Grid>
</Window>

<Window x:Class="PixelEngine.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="PixelEngine - Advanced Graphics Engine" 
        Height="800" Width="1200"
        WindowState="Maximized"
        Background="White"
        Icon="Resources/icon.ico">

    <Grid>
        <!-- Main background -->
        <Grid.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="#FFFFFF" Offset="0"/>
                <GradientStop Color="#F8F9FA" Offset="0.5"/>
                <GradientStop Color="#FFFFFF" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>

        <!-- Main content -->
        <StackPanel x:Name="MainContainer" VerticalAlignment="Center" HorizontalAlignment="Center">
            
            <!-- Application logo -->
            <Viewbox Height="100" Margin="0,0,0,30">
                <Canvas Width="200" Height="100">
                    <!-- Pixel symbols -->
                    <Rectangle Width="15" Height="15" Fill="#4A90E2" Canvas.Left="20" Canvas.Top="20"/>
                    <Rectangle Width="15" Height="15" Fill="#7ED321" Canvas.Left="40" Canvas.Top="20"/>
                    <Rectangle Width="15" Height="15" Fill="#F5A623" Canvas.Left="60" Canvas.Top="20"/>
                    <Rectangle Width="15" Height="15" Fill="#D0021B" Canvas.Left="80" Canvas.Top="20"/>
                    
                    <Rectangle Width="15" Height="15" Fill="#BD10E0" Canvas.Left="20" Canvas.Top="40"/>
                    <Rectangle Width="15" Height="15" Fill="#50E3C2" Canvas.Left="40" Canvas.Top="40"/>
                    <Rectangle Width="15" Height="15" Fill="#B8E986" Canvas.Left="60" Canvas.Top="40"/>
                    <Rectangle Width="15" Height="15" Fill="#F8E71C" Canvas.Left="80" Canvas.Top="40"/>
                    
                    <Rectangle Width="15" Height="15" Fill="#4A90E2" Canvas.Left="20" Canvas.Top="60"/>
                    <Rectangle Width="15" Height="15" Fill="#9013FE" Canvas.Left="40" Canvas.Top="60"/>
                    <Rectangle Width="15" Height="15" Fill="#FF6B6B" Canvas.Left="60" Canvas.Top="60"/>
                    <Rectangle Width="15" Height="15" Fill="#4ECDC4" Canvas.Left="80" Canvas.Top="60"/>
                </Canvas>
            </Viewbox>

            <!-- Main title -->
            <TextBlock x:Name="TitleText" 
                       Text="PixelEngine"
                       Style="{StaticResource TitleTextStyle}"
                       Foreground="#2C3E50"
                       Margin="0,20,0,10"
                       Opacity="0">
                <TextBlock.Effect>
                    <DropShadowEffect Color="#BDC3C7" BlurRadius="10" ShadowDepth="2" Opacity="0.5"/>
                </TextBlock.Effect>
            </TextBlock>

            <!-- Subtitle -->
            <TextBlock x:Name="SubtitleText"
                       Text="Advanced Graphics Engine - Built with C#"
                       Style="{StaticResource SubtitleTextStyle}"
                       Foreground="#7F8C8D"
                       Margin="0,10,0,40"
                       Opacity="0"/>

            <!-- Loading bar -->
            <ProgressBar Width="300" Height="8" 
                         Background="#ECF0F1"
                         Foreground="#3498DB"
                         IsIndeterminate="True"
                         Margin="0,0,0,30"/>

            <!-- Control buttons -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,0">
                
                <Button x:Name="AboutButton"
                        Content="About"
                        Width="120" Height="40"
                        Margin="10,0"
                        Background="#3498DB"
                        Foreground="White"
                        FontFamily="Segoe UI"
                        FontSize="14"
                        BorderThickness="0"
                        Click="AboutButton_Click">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}"
                                                CornerRadius="5">
                                            <ContentPresenter HorizontalAlignment="Center"
                                                              VerticalAlignment="Center"/>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="#2980B9"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </Button.Style>
                </Button>

                <Button x:Name="ExitButton"
                        Content="Exit"
                        Width="120" Height="40"
                        Margin="10,0"
                        Background="#E74C3C"
                        Foreground="White"
                        FontFamily="Segoe UI"
                        FontSize="14"
                        BorderThickness="0"
                        Click="ExitButton_Click">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}"
                                                CornerRadius="5">
                                            <ContentPresenter HorizontalAlignment="Center"
                                                              VerticalAlignment="Center"/>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="#C0392B"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </Button.Style>
                </Button>

            </StackPanel>

        </StackPanel>

        <!-- Status information -->
        <StatusBar VerticalAlignment="Bottom" Background="#34495E" Height="30">
            <StatusBarItem>
                <TextBlock Text="Ready" Foreground="White" FontFamily="Segoe UI" FontSize="12"/>
            </StatusBarItem>
            <StatusBarItem HorizontalAlignment="Right">
                <TextBlock Text="PixelEngine v1.0" Foreground="#BDC3C7" FontFamily="Segoe UI" FontSize="12"/>
            </StatusBarItem>
        </StatusBar>

    </Grid>
    
</Window>
